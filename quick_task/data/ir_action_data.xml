<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sale_order_line_list" model="ir.actions.act_window">
        <field name="name">Sale Order Lines</field>
        <field name="res_model">sale.order.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_sale_order_lines"
              name="Sale Order Lines"
              parent="sale.sale_menu_root"
              action="action_sale_order_line_list"
              sequence="99"/>

    <record id="action_create_sale_order_popup" model="ir.actions.server">
        <field name="name">Create Sale Order</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="binding_model_id" ref="sale.model_sale_order_line"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = model.action_create_sale_order_popup()</field>
    </record>
</odoo>
