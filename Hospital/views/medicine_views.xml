<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_medicine" model="ir.actions.act_window">
        <field name="name">Medicine</field>
        <field name="res_model">hospital.medicine</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face"></p>
        </field>
    </record>


    <record id="view_medicine_form" model="ir.ui.view">
        <field name="name">medicine.view.form</field>
        <field name="model">hospital.medicine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="dosage"/>
                        <field name="duration"/>
                    </group>

                </sheet>
            </form>
        </field>

    </record>

    <record id="view_medicine_list" model="ir.ui.view">
        <field name="name">medicine.view.list</field>
        <field name="model">hospital.medicine</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="dosage"/>
                <field name="duration"/>

            </list>
        </field>
    </record>
</odoo>