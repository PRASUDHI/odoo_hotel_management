<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    create form view-->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--                    <button string="Cancel"/>-->
                    <!--                    <button string="Sold" />-->

                    <button name="sold"
                            type="object"
                            string="Sold"
                            modifiers="{'invisible': [['can_show_action_buttons', '=', False]]}"/>

                    <button name="cancelled"
                            type="object"
                            string="Cancel"
                            modifiers="{'invisible': [['can_show_action_buttons', '=', False]]}"/>


                    <field name="status"
                           widget="statusbar"
                           statusbar_visible="new,offer_received,offer_accepted,sold,cancelled"/>


                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="property_tag" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="property_type"/>
                            <field name="postcode"/>
                        </group>
                        <group>

                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="data_availability"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="status"/>
                                <field name="garden_orientation"/>
                                <field name="total"/>
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer"/>
                                <field name="user_id"/>

                            </group>
                        </page>

                        <page string="Offers">
                            <group>
                                <field name="property_p"/>

                            </group>
                        </page>
                    </notebook>


                </sheet>


            </form>
        </field>
    </record>


    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.view.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="data_availability"/>
            </list>
        </field>
    </record>


    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="My Custom Name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <filter string="east" name="garden_orientation" domain="[('garden_orientation','=','east')]"/>
                <group expand="'1" string="Group By">
                    <filter name="garden_orientation" string="Orientation" context="{'group_by':'garden_orientation'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face"></p>
        </field>
    </record>


</odoo>