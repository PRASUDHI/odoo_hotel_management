<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="property_offers_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">property.offers</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">Offers</p>
        </field>
    </record>

    <record id="property_offers_view_form" model="ir.ui.view">
        <field name="name">property.offers.view.form</field>
        <field name="model">property.offers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="offer_status"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>


                </sheet>


            </form>
        </field>
    </record>


    <record id="property_offers_view_list" model="ir.ui.view">
        <field name="name">property.offers.view.list</field>
        <field name="model">property.offers</field>
        <field name="arch" type="xml">
            <list>
                <field name="price"/>
                <field name="seller_id"/>
<!--                <field name="offer_status"/>-->
                <field name="validity"/>
                <field name="date_deadline"/>
               , ('dormitory', 'Dormitory') <button name="action_accept" type="object" string="Accept" icon="fa-check" />
                <button name="action_refuse" type="object" string="Refuse" icon="fa-times" />
                <field name="offer_status" invisible="1"/>
            </list>
        </field>
    </record>
</odoo>