<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_hotel_category">
            <field name="name">Hotel</field>
            <field name="sequence">13</field>
        </record>


        <record id="group_hotel_reception" model="res.groups">
            <field name="name">Reception</field>
            <field name="category_id" ref="hotel_management.module_hotel_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to accommodation.</field>
        </record>

        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="hotel_management.module_hotel_category"/>
            <field name="implied_ids" eval="[(4, ref('hotel_management.group_hotel_reception'))]"/>
            <field name="comment">the user will have access to rooms,menu items.</field>
        </record>



        <record id="hotel_accommodation_manager_rule" model="ir.rule">
            <field name="name">Accommodation multi company rule</field>
            <field name="model_id" ref="model_hotel_accommodation"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
            <field name="groups" eval="[(4, ref('hotel_management.group_hotel_reception'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>


        <record id="hotel_rooms_manager_rule" model="ir.rule">
            <field name="name">Rooms multi company rule</field>
            <field name="model_id" ref="model_hotel_rooms"/>
            <field name="domain_force">[('company_id', 'in', company_ids )]</field>
            <field name="groups" eval="[(4, ref('hotel_management.group_hotel_manager'))]"/>
        </record>


        <record id="hotel_rooms_reception_rule" model="ir.rule">
            <field name="name">Rooms multi company rule</field>
            <field name="model_id" ref="model_hotel_rooms"/>
            <field name="domain_force">[('company_id', 'in', company_ids )]</field>
            <field name="groups" eval="[(4, ref('hotel_management.group_hotel_reception'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>


    </data>
</odoo>