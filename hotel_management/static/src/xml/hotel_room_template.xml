<?xml version="1.0" encoding="utf-8" ?>
<templates xml:space="preserve">
    <t t-name="hotel_management.hotel_room_template">
        <section class="hotel-room-section my-5">
            <div class="container">
                <h2 class="text-center mb-4 text-primary">Our Rooms</h2>
                <div class="row">
                    <t t-foreach="result.rooms" t-as="room" t-key="room.id">
                        <div class="col-md-4 mb-4">
                            <div class="card ">
                                <t t-if="room.image">
                                    <img t-att-src="room.image"
                                         class="card-img-top rounded-top"
                                         t-att-alt="room.name"
                                         style="height: 200px; object-fit: cover;"
                                         loading="lazy"/>
                                </t>
                                <t t-else="">
                                    <img src=""
                                         class="card-img-top rounded-top"
                                         alt="Default Room"
                                         style="height: 200px; object-fit: cover;"
                                         loading="lazy"/>
                                </t>
                                <div class="card-body">
                                    <h5 class="card-title text-dark"><t t-esc="room.name"/></h5>
                                    <p><strong>Bed:</strong> <t t-esc="room.bed"/></p>
                                    <p><strong>Rate:</strong> â‚¹<t t-esc="room.rent"/></p>
                                    <p>
                                        <strong>Facilities:</strong>
                                        <t t-foreach="room.facilities" t-as="fac" t-key="fac.id">
                                            <span class="badge bg-secondary rounded-pill ms-3"><t t-esc="fac"/></span>
                                        </t>
                                    </p>
                                    <p>
                                        <t>
                                            <span class="badge rounded-pill text-bg-success"><t t-esc="room.state"/></span>
                                        </t>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </section>
    </t>
</templates>