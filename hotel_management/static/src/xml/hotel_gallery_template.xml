<?xml version="1.0" encoding="UTF-8"?>
<!--<odoo>-->
    <templates xml:space="preserve">
        <t t-name="hotel_management.hotel_gallery_carousel">
            <div class="container position-relative">
                <div t-att-id="unique_id" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
                    <div class="carousel-inner">
                        <t t-foreach="chunkData" t-as="chunk" t-key="chunk_index">
                            <div t-att-class="chunk_index === 0 ? 'carousel-item active' : 'carousel-item'">
                                <div class="row justify-content-center">
                                    <t t-foreach="chunk" t-as="img" t-key="img['id']">
                                        <div class="col-md-2 mb-3">
                                            <div class="card d-flex flex-column justify-content-between" style="border-radius:12px; overflow:hidden; height:230px;">
                                                <img class="card-img-top"
                                                     t-attf-src="data:image/jpeg;base64,{{img['image_1920'] or ''}}"
                                                     t-att-alt="img['name']"
                                                     style="height:160px; width:100%; object-fit:cover;"/>
                                                <div class="card-body text-center" style="padding:8px; flex-grow:1;">
                                                    <p class="fw-bold text-primary mb-0"
                                                       style="font-size:14px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;"
                                                       t-esc="img['name']"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>

                    <a class="carousel-control-prev" t-att-href="'#' + unique_id" role="button" data-bs-slide="prev">
                        <span class="fa fa-chevron-left fa-2x text-dark"></span>
                    </a>
                    <a class="carousel-control-next" t-att-href="'#' + unique_id" role="button" data-bs-slide="next">
                        <span class="fa fa-chevron-right fa-2x text-dark"></span>
                    </a>
                </div>
            </div>
        </t>
    </templates>
<!--</odoo>-->
