<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="hotel_management_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <h2 style="text-align:center;">Hotel Management Report</h2>
                <p>
                    Date From:
                    <t t-esc="date_from"/>
                    <br/>
                    Date To:
                    <t t-esc="date_to"/>
                    <br/>
                    Guest:
                    <t t-esc="name"/>
                    <br/>
                </p>
                <table class="table table-bordered mt32">
                    <thead>
                        <tr>
                            <th class="text-center"><span>SL.No</span></th>
                            <th class="text-center"><span>Guest</span></th>
                            <th class="text-center"><span>Check In</span></th>
                            <th class="text-center"><span>Check Out</span></th>
                            <th class="text-center"><span>State</span></th>
                        </tr>
                    </thead>

                    <tbody >
                        <tr t-foreach="docs" t-as="line">
                            <td>
                                <t t-esc="line['sl_no']"/>
                            </td>
                            <td>
                                <t t-esc="line['name']"/>
                            </td>
                            <td>
                                <t t-esc="line['date_from']"/>
                            </td>
                            <td>
                                <t t-esc="line['date_to']"/>
                            </td>
                            <td>
                                <t t-esc="line['state']"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>